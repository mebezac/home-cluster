---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "#{ cloudflare.domain.replace('.', '-') }#-production"
spec:
  secretName: "#{ cloudflare.domain.replace('.', '-') }#-production-tls"
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  commonName: "#{ cloudflare.domain }#"
  dnsNames:
    - "#{ cloudflare.domain }#"
    - "*.#{ cloudflare.domain }#"
